<section>
<div class="summary">
	<div class="message">
		<div class="checkboxes">
			<span class="message_icon_span">
				<i class="fa fa-square"></i>
				<i class="fa fa-star"></i>
			</span>
		</div>
		<a class="sender" href="#"><%= message.from[0].name %></a>
		<h1><%= message.raw_message.subject %></h1>
		<i></i>
		<i class="fa fa-times"></i>
		<p><%= date(message) %></p>
	</div>
</div>
<div class="showmessage">
	<div class="closedivbutton">
		<!--<p>Close</p>-->
	</div>
	<div class="messagediv">
		<div class="optionsmodule">
			<ul class="detailsmodule">
				<li class="details"><a href="#">Details</a></li>
				<li class="detailsbutton"><a href="#"></a></li>
			</ul>
			<ul class="replymodule">
				<li class="closebutton"><a href="#"></a></li>
				<li class="replymenu"><a href="#"></a></li>
				<li class="reply"><a href="#"></a></li>
			</ul>
		</div>
		<div class="replymenuholder">
			<div class="replymenudiv">
				<ul class="replymenulist">
					<li><a href="#">Print</a></li>
					<li><a href="#">Estimate</a></li>
					<li><a href="#">Message</a></li>
					<li><a href="#">Copy</a></li>
					<li><a href="#">More</a></li>
				</ul>
			</div>
		</div>
		<div class="expand_details">
			<div class="lineonediv">
				<ul>
					<li>To<strong>John Smith</strong></li>
					<li>From<strong>Mike Jones</strong></li>
				</ul>
			</div>
			<div class="linetwodiv">
				<ul>
					<li>Subject<strong>I need an estimate for the Attached Project</strong></li>
					<li>Date<strong>August 8, 2013 9:30AM</strong></li>
				</ul>
			</div>
		</div>
		</div>
		<div class="messagebody">

		<section class="messagebody_text">
			<% content = message.text_part.body.raw_source.split('\n') %>
			<% content.each do |sentence| %>
			<p><%= sentence %></p>
			<% end %>
		</section>
		
		<div class="replycontainer">
			<div class="replybox">
				<div class="replybox2">
					<textarea rows="5" cols="150"></textarea>
					<div class="replyicons">
						<ul class="replylist">
							<li class="send"><a href="#"></a></li>
							<li class="format"><a href="#"></a></li>
							<li class="attach"><a href="#"></a></li>
							<li class="trash"><a href="#"></a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="replydivbutton">
		<p>Reply</p>
	</div>
</div>
</section>
